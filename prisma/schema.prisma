generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  email     String  @unique
  password  String
  firstName String
  lastName  String
  Hotel     Hotel[]
}

model Hotel {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  hotelType     String
  country       String
  city          String
  numOfAdults   Int
  numOfChildren Int
  facilities    String[]
  pricePerNight Float
  rating        Float    @default(0.0)
  imageURLs     String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id])
  userId        String   @db.ObjectId
}
